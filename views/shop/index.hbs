<div class="col-lg-12">
    <div class="page-header">
        <div class="pull-right">
            <a class="btn btn-success" href="/carts/">Check out</a>
        </div>
        <h1>iCanStore - Shop</h1>
    </div>
    {{#each products}}
    <div class="row">
        {{#each this}}
        <div class="card col-lg-3">
            <img src="..\img\\{{this.prod_Code}}.png" class="card-img-top" onerror="this.style.display='none';"
                alt="Product Code: {{thisprod_Code}}">
            <div class="card-body">
                <h5 class="card-title">{{this.prod_Name}}</h5>
                <div class="clearfix">
                    <div class="price pull-left">
                        R {{this.prod_Price}}
                    </div>
                    <a type="submit" class="btn btn-primary pull-right" role="button">Add to Cart</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/each}}

</div>