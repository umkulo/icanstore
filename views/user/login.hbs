<div class="col-lg-12">
    <div class="page-header" style='margin-top: 80px'>
        <div class="pull-right">
            <a class="btn btn-warning" href="/user">Cancel</a>
        </div>
        <h2>Login</h2>
    </div>
    <div class='container'>
        {{#if hasErrors}}
        <div class='alert alert-danger'>
            {{#each messages}}
            <p>{{this}}</p>
            {{/each}}
        </div>
        {{/if}}

        <form method="GET" class="form-horizontal" action='../user/login/' id="insert_form" data-toggle="validator">
            <div class="col">
                <div class="form-group">
                    <label for="frmEmail" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-4">
                        <input type="text" id="frmEmail" name="user_Email" value='{{user_Email}}'
                            class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="frmPassword" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-4">
                        <input type="password" id="frmPassword" name="user_Password" value='{{user_Password}}'
                            class="form-control" />
                    </div>
                </div>
                <input type="hidden" name="_csrf" value="{{ csrfToken}}">
                <input type="submit" value="Sign in" class="btn btn-success">
        </form>
    </div>

</div>