<div class="col-lg-12">
    <div class="page-header">
        <div class="pull-right">
            <a class="btn btn-success" href="/user/add">New User</a>
        </div>
        <h1>List of Users</h1>
    </div>
   
    <table class="table table-hover" id="mytable">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Surname</th>
        <th scope="col">Name</th>
        <th scope="col">Mobile</th>
        <th scope="col">Email</th>
        <th scope="col">MP Number</th>
        <th scope="col">Practice Number</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
        {{#each users}}    
        <tr>
            <th scope="row">{{user_ID}}</th>
            <td>{{user_Surname}}</td>
            <td>{{user_Name}}</td>
            <td>{{user_Cellphone}}</td>
            <td>{{user_Email}}</td>
            <td>{{user_MPNumber}}</td>
            <td>{{user_PracticeNo}}</td>
            <td>
                <a href="/users/edit/{{ user_ID }}"  class="btn btn-warning" >
                    <i class="far fa-edit"></i>
                </a>
                <a href="/users/delete/{{ user_ID }}" method='POST' class="btn btn-danger">
                    <i class="far fa-trash-alt"></i>
                </a>
            </td>
        </tr>
        {{else}}
        <div class="alert alert-danger" role="alert">
            No users available
        </div>
        {{/each}}
    </tbody>
    </table>
</div>