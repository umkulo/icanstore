<div class="col-lg-12">
    <div class="page-header">
        <div class="pull-right">
            <a class="btn btn-success" href="/product/add">New Product</a>
        </div>
        <h1>List of Products</h1>
    </div>
    <table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Qty</th>
        <th scope="col">Price</th>
        <th scope="col">Disc</th>
        <th scope="col">Active</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
        {{#each products}}    
        <tr>
            <th scope="row">{{prod_ID}}</th>
            <td>{{prod_Name}}</td>
            <td>{{prod_Qty}}</td>
            <td>{{prod_Price}}</td>
            <td>{{prod_Disc}}</td>
            <td>{{prod_Active}}</td>
            <td>
                <a href="/products/edit/{{ prod_ID }}"  class="btn btn-warning" >
                    <i class="far fa-edit"></i>
                </a>
                <a href="/products/delete/{{ prod_ID }}" method='POST' class="btn btn-danger">
                    <i class="far fa-trash-alt"></i>
                </a>
            </td>
        </tr>
        {{else}}
        <div class="alert alert-danger" role="alert">
            No products available
        </div>
        {{/each}}
    </tbody>
    </table>
</div>